"use babel";
// @flow

export type DiagnosticMode = "logs" | "organized";

export type DiagnosticType = "error" | "warning" | "success" | "info";

export type DiagnosticMessageType =
  | string
  | {
      text: string,
      html: boolean,
    }
  | {
      data: Object,
    }
  | ((props: any) => React$Element<any, any, any>);

export type DiagnosticLocation = {
  path: string,
  line: number,
  column: number,
};

export type PluginDiagnostic = {
  type: DiagnosticType,
  message: DiagnosticMessageType,
  view?: React$Component<any, any, any>,
  date?: number,
  location?: DiagnosticLocation,
};

export type Diagnostic = PluginDiagnostic & {
  step: number,
  task?: string,
};
